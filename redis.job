job "redis" {
  datacenters = ["dc1"]
  type        = "service"

  group "redis" {
    count = 1

    network {
      port "redis" {
        static = 6379
      }
    }

    task "redis" {
      driver = "docker"

      config {
        image = "redis:3.2"
        ports = ["redis"]
      }

      resources {
        cpu    = 200
        memory = 100
      }

      service {
        name = "redis"
        tags = [ "urlprefix-/redis", "redis" ]
        port = "redis"

        check {
          name     = "alive"
          type     = "tcp"
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}
